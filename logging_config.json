{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(levelname)s - %(name)s - %(message)s (%(filename)s:%(lineno)d)"
        }
    },
    "handlers": {
        "fileHandler": {
            "class": "logging.FileHandler",
            "formatter": "standard",
            "filename": "app_errors.log",
            "mode": "a",
            "encoding": "utf-8"
        },
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["fileHandler", "console"]
    },
    "custom_messages": {
        "DEBUG": "Mensagem de debug.",
        "INFO": "Mensagem informativa.",
        "WARNING": "Aviso importante.",
        "ERROR": "Erro crítico.",
        "CRITICAL": "Falha crítica do sistema."
    },
    "terminal_notifications": {
        "DEBUG": true,
        "INFO": true,
        "WARNING": true,
        "ERROR": false,
        "CRITICAL": true
    },
    "log_levels": {
        "DEBUG": 10,
        "INFO": 20,
        "WARNING": 40,
        "ERROR": 70,
        "CRITICAL": 80
    }
}
